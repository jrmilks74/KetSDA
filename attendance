ui <- fluidPage(
        titlePanel("Kettering SDA Church Attendance"),
        tabsetPanel(
                attendanceTabUI("overall",   "Overall"),
                attendanceTabUI("ascent",    "Ascent"),
                attendanceTabUI("sanctuary", "Sanctuary"),
